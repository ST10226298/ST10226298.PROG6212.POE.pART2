@model IEnumerable<ContractClaimSystem.Models.ClaimModel>
@{
    Layout = "_Layout";
}

<h2>Pending Claims</h2>
<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Claim Date</th>
            <th>Claim Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.ClaimDate.ToShortDateString()</td>
                <td>@claim.ClaimAmount</td>
                <td>
                    <a asp-action="ApproveClaim" asp-route-id="@claim.ClaimId" class="btn btn-success">Approve</a>
                    <a asp-action="RejectClaim" asp-route-id="@claim.ClaimId" class="btn btn-danger">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
